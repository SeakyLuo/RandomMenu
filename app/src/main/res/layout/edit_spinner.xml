<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/edit_spinner_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:background="@null"
        android:maxLength="10"
        android:maxLines="1"
        android:inputType="textAutoComplete"/>

    <ImageView
        android:id="@+id/edit_spinner_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edit_spinner_edit"
        android:layout_alignEnd="@+id/edit_spinner_edit"
        android:layout_alignBottom="@+id/edit_spinner_edit"
        android:padding="8dp"
        android:src="@drawable/ic_expand_holo_light" />

    <View
        android:id="@+id/edit_spinner_expand_above"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_spinner_edit"
        android:layout_alignLeft="@id/edit_spinner_expand"
        android:layout_alignTop="@+id/edit_spinner_edit"
        android:padding="8dp"/>
</RelativeLayout>
